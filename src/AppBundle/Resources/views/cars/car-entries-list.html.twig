{% extends 'base.html.twig' %}

{% block body %}
    <div class="full-width-wrapper" style="margin-bottom: 30px;">
        <div class="fixed-width-wrapper" id="body-content">
            <!--Content-->
            <div id="content" class="float-left content-left">
                <div class="header-text">
                    <ul id="breadcrumbs">
                        <li><a href="{{ path('homepage') }}" title="">Home</a></li>
                        <li><a href="{{ path('cars-list') }}" title="">Cars</a></li>
                        <li><a href="{{ path('car-entries-list', {"car": car.id}) }}" title="">{{ car.name }}</a></li>
                    </ul>

                    <h1 class="first-word double-color sp">{{ car.name }} entries</h1>

                </div>

                <div>
                    <div class="flex-container">
                        {% if (car.carEntries | length == 0) %}
                            <p>No entries yet!</p>
                        {% endif %}
                        {% for entry in car.carEntries %}
                            <div class="flex-100 flex-container sp" style="font-size: 1.1em">
                                <div>
                                    {% for action in entry.getCarActions() %}
                                        <span>{{ action.name }}</span><br/>
                                    {% endfor %}
                                </div>
                                <div  class="flex-30" style="text-align: right">
                                    <span>{{ entry.date | date('d.m.Y') }}</span> <br/>
                                    <span>{{ entry.mileage }} {{ car.lengthUnit.name }}</span>
                                </div>
                            </div><br/>
                            <div class="sp"></div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <!--/Content-->

            <!--Sidebar-->
            <div id="sidebar" class="float-right">

                <!--box-->
                <div class="box">
                    <h1 class="first-word double-color sp">More Links</h1>

                    <ul class="list cat">
                        <li><a href="{{ path('car-entries-add', {'car': car.id }) }}" title="">Add new entry </a></li>
                    </ul>
                </div>
                <!--/box-->


                <!--box-->
                <div class="box">
                    <h1 class="first-word double-color sp">Locate us</h1>

                    <div class="img-border preloading-light">
                        <img src="{{ asset('assets/images/pix/locateus.jpg') }}" alt="">
                    </div>
                </div>
                <!--/box-->
            </div>
            <!--/Sidebar-->
        </div>
    </div>
{% endblock %}