{% extends 'base.html.twig' %}

{% block body %}
    <div class="full-width-wrapper" style="margin-bottom: 30px;">
        <div class="fixed-width-wrapper" id="body-content">
            <!--Content-->
            <div id="content" class="float-left content-left">
                <div class="header-text">
                    <ul id="breadcrumbs">
                        <li><a href="{{ path('homepage') }}" title="">Home</a></li>
                        <li class="current"><a href="#" title="">Cars</a></li>
                    </ul>

                    <h1 class="first-word double-color sp">Car entries</h1>

                </div>

                <div>
                    <div class="flex-container">
                        {% for entry in entries %}
                            <div class="flex-30">
                                {{ entry.date | date('Y-m-d') }}
                                {% for action in entry.getCarActions() %}
                                    <p>{{ action.name }}</p>
                                {% endfor %}
                                <div class="sp"></div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <!--/Content-->

            <!--Sidebar-->
            <div id="sidebar" class="float-right">

                <!--box-->
                <div class="box">
                    <h1 class="first-word double-color sp">More Links</h1>

                    <ul class="list cat">
                        <li><a href="#" title="">Lorem ipsum dolor sit amet consectetur </a></li>
                        <li class="current"><a href="#" title="">Praesent ultricies urna a urna</a></li>
                        <li><a href="#" title="">Quisque metus enim, venenatis</a></li>
                        <li><a href="#" title="">Nullam ven tincidunt dolor consectetur </a></li>
                        <li><a href="#" title="">Lorem ipsum dolor sit amet consectetur </a></li>
                    </ul>
                </div>
                <!--/box-->


                <!--box-->
                <div class="box">
                    <h1 class="first-word double-color sp">Locate us</h1>

                    <div class="img-border preloading-light">
                        <img src="{{ asset('assets/images/pix/locateus.jpg') }}" alt="">
                    </div>
                </div>
                <!--/box-->
            </div>
            <!--/Sidebar-->
        </div>
    </div>
{% endblock %}