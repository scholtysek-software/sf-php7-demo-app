{% extends 'base.html.twig' %}

{% block body %}
    <div class="full-width-wrapper" style="margin-bottom: 30px;">
        <div class="fixed-width-wrapper" id="body-content">
            <!--Content-->
            <div id="content" class="float-left content-left">
                <div class="header-text">
                    <ul id="breadcrumbs">
                        <li><a href="{{ path('homepage') }}" title="">Home</a></li>
                        <li class="current"><a href="#" title="">Cars</a></li>
                    </ul>

                    <h1 class="first-word double-color sp">Your cars</h1>

                </div>

                <div>
                    <div class="flex-container">
                        {% if (cars | length == 0) %}
                            <p>No cars yet!</p>
                        {% endif %}
                        {% for car in cars %}
                            <div class="flex-100">
                                <h3 class="first-word">{{ car.name }}</h3>
                                <p>Unit of length: {{ car.lengthUnit.name }}</p>
                                <p><a href="{{ path('car-entries-list', {'car': car.getId()}) }}">Entries</a> </p>
                                <div class="sp"></div>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
            <!--/Content-->

            <!--Sidebar-->
            <div id="sidebar" class="float-right">

                <!--box-->
                <div class="box">
                    <h1 class="first-word double-color sp">More Links</h1>

                    <ul class="list cat">
                        <li><a href="{{ path('car-add') }}" title="">Add new car</a></li>
                    </ul>
                </div>
                <!--/box-->


                <!--box-->
                <div class="box">
                    <h1 class="first-word double-color sp">Locate us</h1>

                    <div class="img-border preloading-light">
                        <img src="{{ asset('assets/images/pix/locateus.jpg') }}" alt="">
                    </div>
                </div>
                <!--/box-->
            </div>
            <!--/Sidebar-->
        </div>
    </div>
{% endblock %}